<%- include("layout", { title: "My Profile", user: user }) %>

<% if (error) { %>
  <div class="alert alert-error" style="max-width: 600px; margin: 20px auto;">
    <%= error %>
  </div>
<% } %>

<div class="profile-container">
  <div class="profile-card">
    <div class="profile-avatar">ðŸ‘¤</div>
    <div class="profile-info">
      <h2><%= user.name %></h2>
      <p class="profile-email"><%= user.email %></p>
      <p class="profile-role"><span class="badge"><%= user.role === "admin" ? "ðŸ”‘ Admin" : "ðŸ‘¤ User" %></span></p>
      <p class="profile-meta">Member since <%= new Date(user.createdAt).toLocaleDateString() %></p>
    </div>
  </div>

  <div class="profile-stats">
    <div class="stat-box">
      <div class="stat-number"><%= user.favorites ? user.favorites.length : 0 %></div>
      <div class="stat-label">Favorites</div>
      <a href="/favorites" class="stat-link">View â†’</a>
    </div>
    <div class="stat-box">
      <div class="stat-number"><%= user.watchHistory ? user.watchHistory.length : 0 %></div>
      <div class="stat-label">Watched</div>
      <a href="/history" class="stat-link">View â†’</a>
    </div>
    <% if (user.role === "admin") { %>
    <div class="stat-box">
      <div class="stat-number">âœ“</div>
      <div class="stat-label">Admin Access</div>
      <a href="/admin" class="stat-link">Panel â†’</a>
    </div>
    <% } %>
  </div>

  <!-- Action Buttons -->
  <div class="profile-action-buttons">
    <button class="btn btn-edit" id="editProfileBtn">Edit Profile</button>
    <button class="btn btn-password" id="changePasswordBtn">Change Password</button>
  </div>

  <div class="profile-actions">
    <a href="/logout" class="btn btn-logout">Logout</a>
  </div>
</div>

<!-- Edit Profile Modal -->
<div id="editProfileModal" class="profile-modal hidden">
  <div class="profile-modal-card">
    <div class="modal-header">
      <h3>Edit Profile</h3>
      <button class="modal-close" id="closeEditModal">âœ•</button>
    </div>
    <form method="POST" action="/profile/update" class="form">
      <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="<%= user.name %>" required>
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" value="<%= user.email %>" required>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn btn-cancel" id="cancelEditModal">Cancel</button>
        <button type="submit" class="btn">Save Changes</button>
      </div>
    </form>
  </div>
</div>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="profile-modal hidden">
  <div class="profile-modal-card">
    <div class="modal-header">
      <h3>Change Password</h3>
      <button class="modal-close" id="closePasswordModal">âœ•</button>
    </div>
    <form method="POST" action="/profile/change-password" class="form">
      <div class="form-group">
        <label>Current Password</label>
        <input type="password" name="currentPassword" required>
      </div>
      <div class="form-group">
        <label>New Password</label>
        <input type="password" name="newPassword" required>
      </div>
      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" required>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn btn-cancel" id="cancelPasswordModal">Cancel</button>
        <button type="submit" class="btn">Update Password</button>
      </div>
    </form>
  </div>
</div>

<script>
  // Edit Profile Modal
  const editProfileBtn = document.getElementById('editProfileBtn');
  const editProfileModal = document.getElementById('editProfileModal');
  const closeEditModal = document.getElementById('closeEditModal');
  const cancelEditModal = document.getElementById('cancelEditModal');

  editProfileBtn.addEventListener('click', () => {
    editProfileModal.classList.remove('hidden');
  });

  closeEditModal.addEventListener('click', () => {
    editProfileModal.classList.add('hidden');
  });

  cancelEditModal.addEventListener('click', () => {
    editProfileModal.classList.add('hidden');
  });

  // Change Password Modal
  const changePasswordBtn = document.getElementById('changePasswordBtn');
  const changePasswordModal = document.getElementById('changePasswordModal');
  const closePasswordModal = document.getElementById('closePasswordModal');
  const cancelPasswordModal = document.getElementById('cancelPasswordModal');

  changePasswordBtn.addEventListener('click', () => {
    changePasswordModal.classList.remove('hidden');
  });

  closePasswordModal.addEventListener('click', () => {
    changePasswordModal.classList.add('hidden');
  });

  cancelPasswordModal.addEventListener('click', () => {
    changePasswordModal.classList.add('hidden');
  });

  // Close modal on overlay click
  editProfileModal.addEventListener('click', (e) => {
    if (e.target === editProfileModal) {
      editProfileModal.classList.add('hidden');
    }
  });

  changePasswordModal.addEventListener('click', (e) => {
    if (e.target === changePasswordModal) {
      changePasswordModal.classList.add('hidden');
    }
  });
</script>
<style>
  .profile-container {
    max-width: 700px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .profile-card {
    background: var(--gradient-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 32px;
    display: flex;
    gap: 24px;
    margin-bottom: 32px;
    box-shadow: var(--shadow-md);
  }

  .profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    flex-shrink: 0;
    box-shadow: var(--shadow-md);
  }

  .profile-info {
    flex: 1;
  }

  .profile-info h2 {
    font-size: 1.8rem;
    margin-bottom: 4px;
    font-weight: 700;
  }

  .profile-email {
    color: var(--text-muted);
    margin-bottom: 8px;
    font-size: 0.95rem;
  }

  .profile-role {
    margin-bottom: 8px;
  }

  .badge {
    background: rgba(229, 9, 20, 0.2);
    border: 1px solid rgba(229, 9, 20, 0.3);
    color: #ffcdd2;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    display: inline-block;
  }

  .profile-meta {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-top: 8px;
  }

  .profile-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .stat-box {
    background: var(--gradient-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .stat-box:hover {
    transform: translateY(-4px);
    border-color: rgba(229, 9, 20, 0.2);
    box-shadow: var(--shadow-md);
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary-red);
    margin-bottom: 8px;
  }

  .stat-label {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 12px;
  }

  .stat-link {
    color: var(--primary-red);
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .stat-link:hover {
    color: var(--primary-red-hover);
  }

  .profile-action-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 32px;
  }

  .btn-edit, .btn-password {
    padding: 12px 20px;
  }

  .profile-actions {
    text-align: center;
  }

  .btn-logout {
    background: linear-gradient(135deg, #b00020, #8b0018);
    padding: 12px 32px;
  }

  .btn-logout:hover {
    background: linear-gradient(135deg, #d00028, #a00020);
  }

  .alert-error {
    background: rgba(229, 9, 20, 0.15);
    border: 1px solid rgba(229, 9, 20, 0.3);
    color: #ffcdd2;
    padding: 16px 20px;
    border-radius: 12px;
    font-weight: 500;
  }

  /* Modal Styles */
  .profile-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.75);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 200;
    backdrop-filter: blur(6px);
    padding: 20px;
  }

  .profile-modal.hidden {
    display: none;
  }

  .profile-modal-card {
    background: var(--gradient-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 28px 24px;
    width: min(450px, 100%);
    box-shadow: var(--shadow-lg);
    animation: scaleIn 0.25s ease;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .modal-header h3 {
    font-size: 1.4rem;
    margin: 0;
    color: var(--primary-red);
  }

  .modal-close {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .modal-close:hover {
    background: rgba(229, 9, 20, 0.2);
    border-color: var(--primary-red);
  }

  .profile-modal-card .form-group {
    margin-bottom: 16px;
  }

  .profile-modal-card .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.95rem;
  }

  .profile-modal-card .form-group input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    background: var(--input-bg);
    color: var(--text-primary);
    border-radius: 10px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .profile-modal-card .form-group input:focus {
    outline: none;
    border-color: var(--primary-red);
    box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.1);
  }

  .modal-actions {
    display: flex;
    gap: 12px;
    margin-top: 24px;
  }

  .modal-actions button {
    flex: 1;
  }

  .btn-cancel {
    background: linear-gradient(145deg, #2a2a2a, #1f1f1f);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn-cancel:hover {
    background: linear-gradient(145deg, #333, #252525);
  }

  @keyframes scaleIn {
    from { opacity: 0; transform: translateY(6px) scale(0.98); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  @media(max-width: 520px) {
    .profile-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 24px;
    }

    .profile-avatar {
      width: 80px;
      height: 80px;
      font-size: 2rem;
    }

    .profile-info h2 {
      font-size: 1.5rem;
    }

    .profile-stats {
      grid-template-columns: 1fr;
    }

    .stat-box {
      padding: 16px;
    }

    .profile-action-buttons {
      grid-template-columns: 1fr;
    }

    .profile-modal-card {
      width: 100%;
      padding: 20px 18px;
    }

    .modal-header h3 {
      font-size: 1.2rem;
    }
  }
</style>

<%- include("footer") %>
